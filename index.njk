---
layout: layouts/home.njk
eleventyNavigation:
  key: Home
  order: 1
---
  <div id="result"></div>

<div style="display: flex;">
  <div id="drop-target-1" ondrop="drop(event)" ondragover="dragOver(event)" style="pading:10px;margin:5px;background:#ccc">/div>
  <div id="drop-target-2" ondrop="drop(event)" ondragover="dragOver(event)" style="pading:10px;margin:5px;background:#ccc"></div>
  <div id="drop-target-3" ondrop="drop(event)" ondragover="dragOver(event)" style="pading:10px;margin:5px;background:#ccc"></div>
  <div id="drop-target-4" ondrop="drop(event)" ondragover="dragOver(event)" style="pading:10px;margin:5px;background:#ccc"></div>
  <div id="drop-target-5" ondrop="drop(event)" ondragover="dragOver(event)" style="pading:10px;margin:5px;background:#ccc"></div>
</div>

<form>
  <div id="1" draggable="true" ondragstart="dragStart(event)">1</div>
  <div id="2" draggable="true" ondragstart="dragStart(event)">2</div>
  <div id="3" draggable="true" ondragstart="dragStart(event)">3</div>
  <div id="4" draggable="true" ondragstart="dragStart(event)">4</div>
    <div id="5" draggable="true" ondragstart="dragStart(event)">5</div>
      <div id="6" draggable="true" ondragstart="dragStart(event)">6</div>
        <div id="7" draggable="true" ondragstart="dragStart(event)">7</div>
          <div id="8" draggable="true" ondragstart="dragStart(event)">8</div>
            <div id="9" draggable="true" ondragstart="dragStart(event)">9</div>
  <div id="10" draggable="true" ondragstart="dragStart(event)">10</div>

  <button id="button">Submit</button>

</form>

  <script>
  function dragStart(event) {
  event.dataTransfer.setData("id", event.target.id);
}

function dragOver(event) {
  event.preventDefault();
}

function drop(event) {
  event.preventDefault();
  const id = event.dataTransfer.getData("id");
  event.target.innerHTML = id;
}

const button = document.getElementById('button');

button.addEventListener('click', () => {
  const dropTarget1 = document.getElementById('drop-target-1');
  const dropTarget2 = document.getElementById('drop-target-2');
  const dropTarget3 = document.getElementById('drop-target-3');
  const dropTarget4 = document.getElementById('drop-target-4');
  const dropTarget5 = document.getElementById('drop-target-5');

  const value1 = Number(dropTarget1.innerHTML);
  const value2 = Number(dropTarget2.innerHTML);
  const value3 = Number(dropTarget3.innerHTML);
  const value4 = Number(dropTarget4.innerHTML);
  const value5 = Number(dropTarget5.innerHTML);

  const url = `/.netlify/functions/lookupcards?values=${value1},${value2},${value3},${value4},${value5}`;

 fetch(url)
  .then(response => response.json())
  .then(data => {
    const result = document.getElementById('result');
    result.innerHTML = data.allvalues;
  })
  .catch(error => {
    console.error(error);
  });
});

  </script>